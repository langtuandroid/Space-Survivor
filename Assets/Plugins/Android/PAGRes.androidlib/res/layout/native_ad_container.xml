<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/native_ad_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:padding="10dp"
    tools:ignore="HardcodedText">

    <ImageView
        android:id="@+id/native_ad_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/tt_ad_logo" />


    <TextView
        android:id="@+id/native_ad_dislike"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="X" />

    <TextView
        android:id="@+id/native_ad_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/native_ad_icon"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1"
        android:maxLines="2"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        tools:text="pangle" />

    <FrameLayout
        android:id="@+id/native_ad_media_container"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/native_ad_desc"
        android:layout_marginBottom="3dp"
        android:scaleType="centerCrop" />


    <RelativeLayout
        android:id="@+id/native_ad_logo"
        android:layout_width="40dp"
        android:layout_height="18dp"
        android:layout_below="@+id/native_ad_media_container"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/native_ad_title"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_below="@+id/native_ad_media_container"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/native_ad_creative_btn"
        android:layout_toRightOf="@+id/native_ad_logo"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLength="14"
        android:singleLine="true"
        android:textSize="18sp"
        tools:text="this is title....." />


    <TextView
        android:id="@+id/native_ad_creative_btn"
        android:layout_width="90dp"
        android:layout_height="28dp"
        android:layout_below="@+id/native_ad_media_container"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:padding="3dp"
        android:textColor="#B22222"
        android:textSize="14sp"
        tools:text="pangle" />
</RelativeLayout>